    "ability_base:zuri",
    "access_token:libaccesstoken_sdk",
    "c_utils:utils",
    "file_api:filemgmt_libn",
    "hilog:libhilog",
    "init:libbegetutil",
    "ipc:ipc_core",
  ]

  deps = [
    "${app_file_service_path}/interfaces/innerkits/native:fileshare_native",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]
